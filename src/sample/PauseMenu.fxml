      </Button>
      <Button fx:id="game2" layoutX="137.0" layoutY="468.0" mnemonicParsing="false" onMouseClicked="#game2" prefHeight="51.0" prefWidth="126.0" style="-fx-background-color: #dd8827;" text="Save GAME 2" textFill="#eae5e5">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="game3" layoutX="137.0" layoutY="534.0" mnemonicParsing="false" onMouseClicked="#game3" prefHeight="51.0" prefWidth="126.0" style="-fx-background-color: #dd8827;" text="Save GAME 3" textFill="#eae5e5">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="bonus" layoutX="84.0" layoutY="168.0" mnemonicParsing="false" onMouseClicked="#extraStars" prefHeight="66.0" prefWidth="228.0" textFill="#110e0e" />

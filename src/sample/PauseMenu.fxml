            <graphic>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Assets/home.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
      <Button fx:id="game1" layoutX="137.0" layoutY="399.0" mnemonicParsing="false" onMouseClicked="#game1" prefHeight="51.0" prefWidth="126.0" style="-fx-background-color: #dd8827;" text="Save GAME 1" textFill="#eae5e5">
         <font>
